<Window x:Class="CurrencyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Amount:</Label>
                <TextBox x:Name="txtChange" PreviewTextInput="PreviewFloatInput">0</TextBox>
                <Button x:Name="btnMakeChange">Make Change</Button>
            </StackPanel>
            <ListBox Height="200" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            <Button x:Name="btnSave" Width="100">Save</Button>
        </StackPanel>

    </Grid>
</Window>
